{
  "name": "aiten163/progression-api",
  "description": "REST API для игры 'Арифметическая прогрессия' на Slim фреймворке",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Elmir"
    }
  ],
  "require": {
    "php": ">=7.4",
    "slim/slim": "4.*",
    "slim/psr7": "^1.5",
    "ext-pdo": "*",
    "ext-pdo_sqlite": "*",
    "ext-json": "*"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.7"
  },
  "autoload": {
    "files": [
      "src/Functions.php"
    ]
  },
  "scripts": {
    "start": "php -S localhost:3000 -t public",
    "check": "phpcs --standard=PSR12 public/index.php src/",
    "fix": "phpcbf --standard=PSR12 public/index.php src/"
  }
}